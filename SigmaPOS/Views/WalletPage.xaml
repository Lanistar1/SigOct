<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SigmaPOS.Views.WalletPage">

    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Frame Margin="15" BackgroundColor="{StaticResource PrimaryColor}" CornerRadius="10" Grid.Row="0" HeightRequest="120" Padding="0">
            <Grid>
                <StackLayout>
                    <Image Source="Intersecter.png" HeightRequest="120" WidthRequest="150" HorizontalOptions="EndAndExpand" VerticalOptions="StartAndExpand" Margin="0,-12,-5,0"/>
                </StackLayout>

                <FlexLayout JustifyContent="SpaceBetween" Margin="20,30">
                    <StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Wallet balance" TextColor="White" FontFamily="Euclid-Medium" FontSize="14" Margin="0,0,0,10"/>
                            <Image Source="Eyess.png" WidthRequest="20" HeightRequest="20" Margin="10,0,0,5"/>
                        </StackLayout>
                        <Label Text="₦ 250 000. 00" TextColor="White" FontFamily="Euclid-Medium" FontSize="20" />
                    </StackLayout>
                    <StackLayout Margin="0,5,0,0">
                        <Label Text="Wallet ID" TextColor="White" FontFamily="Euclid-Medium" FontSize="15" HorizontalTextAlignment="End" />
                        <Label Text="0089657328" TextColor="White" FontFamily="Euclid-Medium" FontSize="15" />
                    </StackLayout>
                </FlexLayout>
            </Grid>
        </Frame>

        <FlexLayout Grid.Row="1" Direction="Column" Margin="20,10">
            <StackLayout>
                <Frame CornerRadius="0" Margin="0,0,0,-5" Padding="15">
                    <FlexLayout Direction="Column">
                        <StackLayout Orientation="Horizontal" Spacing="60">
                            <Label Text="18/09/2022 - 18/10/2022" TextColor="Black"  FontFamily="Euclid-Medium" FontSize="12" Margin="0,5,0,0"/>
                            <Frame Padding="5,-5" HeightRequest="40" WidthRequest="100" CornerRadius="5" BackgroundColor="#F5F5F5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="7*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Picker TextColor="{StaticResource PrimaryColor}" Grid.Column="0" FontSize="Small" Title="All Status" >
                                        <Picker.Items>
                                            <x:String>All Status</x:String>
                                            <x:String>Withdrawal</x:String>
                                            <x:String>Credit</x:String>
                                        </Picker.Items>
                                    </Picker>
                                    <Image Source="downarrows.png" WidthRequest="15" HeightRequest="15" Grid.Column="1"/>
                                </Grid>
                            </Frame>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal" Spacing="50" Margin="0,15,0,0">
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Credit:" TextColor="{StaticResource PrimaryColor}"  FontFamily="Euclid-Medium" FontSize="13"/>
                                <Label Text="₦ 150 000.00" TextColor="#7B7B7B" FontFamily="Euclid-Medium" FontSize="12"/>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Debit:" TextColor="#FF6B00" FontFamily="Euclid-Medium" FontSize="13"/>
                                <Label Text="₦ 50 000.00" TextColor="#7B7B7B" FontFamily="Euclid-Medium" FontSize="12"/>
                            </StackLayout>
                        </StackLayout>
                    </FlexLayout>
                </Frame>

                <Line X1="0"
                      Y1="0"
                      X2="400"
                      Y2="0"
                      Margin="0,0"
                      Grid.Row="1"
                      Stroke="gray"
                      StrokeDashArray="0,0"
                      StrokeDashOffset="2"/>

                <Frame CornerRadius="0" HeightRequest="70" Margin="0,-5" Padding="15">

                    <StackLayout>
                        <FlexLayout JustifyContent="SpaceBetween">
                            <Label Text="Withdrawal" TextColor="#ff6b00" FontFamily="Euclid-Medium" FontSize="13"/>
                            <Label Text="7,000" TextColor="#ff6b00" FontFamily="Euclid-Medium" FontSize="13"/>
                        </FlexLayout>

                        <StackLayout Orientation="Horizontal">
                            <Label Text="Emmanuel Ola |" FontFamily="Euclid-Medium" FontSize="13" TextColor="Black"/>
