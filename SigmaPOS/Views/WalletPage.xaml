                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Monday," FontFamily="Euclid-Medium" FontSize="13" TextColor="Black"/>
                            <Label Text="20 October 2022" FontFamily="Euclid-Medium" FontSize="13" TextColor="Black"/>
                            <Label Text="09:20:05" FontFamily="Euclid-Medium" FontSize="13" TextColor="Black"/>
