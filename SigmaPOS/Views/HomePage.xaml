<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SigmaPOS.Views.HomePage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource PrimaryColor}">


    <Grid>
        <StackLayout>
            <Image Source="Intersect.png" VerticalOptions="StartAndExpand" HorizontalOptions="EndAndExpand"/>
        </StackLayout>
        
        <StackLayout Margin="0,300">
            <Image Source="Sigoct.png" HeightRequest="30" WidthRequest="50"/>
        </StackLayout>

        <StackLayout>
            <ActivityIndicator IsVisible="true"/>
        </StackLayout>

        <StackLayout>
            <Label Text="Payment made easy" TextColor="White" Margin="0,740" HorizontalTextAlignment="Center" FontFamily="Poppins-Light"/>
        </StackLayout>

        <StackLayout>
            <Image Source="Intersects.png" VerticalOptions="EndAndExpand" HorizontalOptions="StartAndExpand"/>
        </StackLayout>
    </Grid>
</ContentPage>